{{ form_start(form) }}
<div class="form-group">
    {{ form_label(form.productName) }}
    {{ form_widget(form.productName) }}
    {{ form_errors(form.productName) }}
</div>

<div class="form-group">
    {{ form_label(form.productQuantity) }}
    {{ form_widget(form.productQuantity) }}
    {{ form_errors(form.productQuantity) }}
</div>

<div class="form-group">
    {{ form_label(form.productPrice) }}
    {{ form_widget(form.productPrice) }}
    {{ form_errors(form.productPrice) }}
</div>
<div class="form-group">
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
