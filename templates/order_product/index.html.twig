{% extends 'bootstrap.html.twig' %}

{% block title %}OrderProduct index{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="box">
                <div class="box-header with-border">
                    <a href="{{ path('order_product_new', {'shop' : shop.id, 'shopOrder' : shop_order.id}) }}"
                       class="btn bg-maroon margin pull-right">Create
                        new</a>
                    <h3 class="box-title">Ordered Product List</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>ProductName</th>
                            <th>ProductQuantity</th>
                            <th>ProductPrice</th>
                            <th colspan="2">Shop Name/Order </th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for order_product in order_products %}
                            <tr>
                                <td>{{ order_product.id }}</td>
                                <td>{{ order_product.productName }}</td>
                                <td>{{ order_product.productQuantity }}</td>
                                <td>{{ order_product.productPrice }}</td>
                                <td>{{ order_product.shopOrder.shop.shopName }}</td>
                                <td>{{ order_product.shopOrder.id }}</td>
                                <td>
                                    <a href="{{ path('order_product_show', {'orderProduct': order_product.id, 'shop' : shop.id, 'shopOrder': shop_order.id}) }}">Show</a>|
                                    <a href="{{ path('order_product_edit', {'orderProduct': order_product.id, 'shop' : shop.id, 'shopOrder': shop_order.id}) }}">Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </section>
{% endblock %}
