{% extends 'bootstrap.html.twig' %}

{% block title %}Driver index{% endblock %}

{% block body %}
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="box">
                <div class="box-header with-border">
                    <div class="pull-right">
                    <a href="{{ path('driver_new') }}" class="btn bg-maroon margin">Create new</a>
                    </div>
                    <h3 class="box-title">Driver List</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email ID</th>
                            <th>Contact No.</th>
                            <th>Band</th>
                            <th>Zone</th>
                            <th>Address</th>
                            <th>Postcode</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for driver in drivers %}
                            <tr>
                                <td>{{ driver.id }}</td>
                                <td>{{ driver.driverName }}</td>
                                <td>{{ driver.emailAddress }}</td>
                                <td>{{ driver.firstPhoneNumber }}</td>
                                <td>{{ driver.band }}</td>
                                <td>{{ driver.zone }}</td>
                                <td>{{ driver.address }}</td>
                                <td>{{ driver.postcode }}</td>
                                <td>
                                    <a href="{{ path('driver_show', {'id': driver.id}) }}"><i class="fa fa-fw fa-eye"></i></a>
                                    <a href="{{ path('driver_edit', {'id': driver.id}) }}"><i class="fa fa-fw fa-edit"</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="11">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->

            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
{% endblock %}
